<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanyuan.mapper.CheckValueScoreInMapper">
	<!--mybatis ehcache缓存配置 -->
	<!-- 以下两个<cache>标签二选一,第一个可以输出日志,第二个不输出日志 <cache type="org.mybatis.caches.ehcache.LoggingEhcache" 
		/> -->
	<!-- <cache type="org.mybatis.caches.ehcache.EhcacheCache"/> -->
	<!-- 以下与实体类的中字段一致 -->

	<select id="findEnterprisePage" resultType="com.lanyuan.entity.CheckValueScoreInFormMap">
		SELECT
		cvsi.id,
		cvsi.check_small_item,
		cvsi.check_min_value,
		cvsi.check_max_value,
		cvsi.min_score,
		cvsi.max_score
		FROM check_value_score_in cvsi
		WHERE 1=1
		<if test="check_small_item != null">
			AND cvsi.check_small_item = ${check_small_item}
		</if>
		<if test="orderby != null">
			ORDER BY ${orderby}
		</if>
	</select>





</mapper>